<%- include('partials/head.ejs'); -%>

<body class="font-anek bg-gray-100 text-gray-600">
  <div><!-- content wrapper-->
    <div class="">
      <header class="p-1 bg-white">
        <nav class="container sm:px-5 flex items-center justify-between border-b">
          <div id="burger" class="burger sm:hidden px-1 cursor-pointer"><!-- burger menu-->
            <svg class="w-6" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </div>
    
          <h1 class="text-3xl">
            <a href="/">
              <span>Chiccrochet.</span>
            </a>
          </h1>
    
        </nav>
        <ul id="menu" class="hidden sm:flex sm:items-center container sm:justify-between">
          <% if (user) { %>
            <li class="mr-2 py-2 sm:my-0 border-b sm:border-0">
              <span class="text-xm">Welcome, <%= user.email %></span>
            </li>

            <li class="mr-2 py-2 sm:my-0 border-b sm:border-0">
              <a href="#" class="flex">
                <svg class="w-4 sm:hidden" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span class="text-xm ml-2">Profile</span>
              </a>
            </li>

            <li class="mr-2 py-2 sm:my-0 border-b sm:border-0">
              <a href="#" class="flex">
                <svg class="w-4 sm:hidden" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span class="text-xm ml-2">Settings</span>
              </a>
            </li>

            <a href="/signout" class="flex border border-gray-600 rounded py-1 px-2 bg-gray-600 text-gray-100 hover:bg-gray-100 hover:text-gray-600 font-semibold uppercase mt-2">
              <svg class="w-4 sm:hidden" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
              </svg>
              <span class="ml-2">signout</span>
            </a>
          <% } else { %>
            <a href="/logout" class="flex border border-gray-600 rounded py-1 px-2 bg-gray-600 text-gray-100 hover:bg-gray-100 hover:text-gray-600 font-semibold uppercase mt-2">
              <svg class="w-4 sm:hidden" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
              </svg>
              <span class="ml-2">logout</span>
            </a>
          <% } %>
          </ul>
      </header>


      <!-- cover image-->
        <img src="./img/1.jpeg" alt="spongebob crochet" class="w-full h-96 object-cover rounded-lg my-2">

        <main class="container"><!-- main content-->
          <div class="text-center my-5">
            <h1 class="text-4xl font-bold p-1">We learn by doing.</h1>
            <h2 class="text-4xl font-bold p-1">Discover Lifelong Learning Crocheting.</h2>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 gap-x-10 mt-12 mx-3 md:mx-8">
            <!-- card goes here-->
            <a href="#" class="card"><!-- card -->
              <img src="./img/7.jpeg" alt="crochet" class="w-full h-48 sm:h-48 object-cover">
              <div class="m-4 mb-1">
                <h3 class="font-bold mb-0">Learn Crocheting for beginners.</h3>
                <span class="flex items-center my-2">
                  <div class="w-6 mt-1">
                    <img src="./img/avatar.jpeg" class="w-full rounded-full" alt="author">
                  </div>
                  <h4 class="text-gray-500 text-sm font-bold ml-2 mt-1">A'aishah</h4>
                </span>
              </div>
              <div class="badge bg-yellow-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z" />
                </svg>
                <span>New</span>
              </div>
            </a>

            <a href="#" class="card"><!-- card -->
              <img src="./img/6.jpeg" alt="crochet" class="w-full h-48 sm:h-48 object-cover">
              <div class="m-4 mb-1">
                <h3 class="font-bold mb-0">Advance Crocheting ($5)</h3>
                <span class="flex items-center my-2">
                  <div class="w-6 mt-1">
                    <img src="./img/avatar.jpeg" class="w-full rounded-full" alt="author">
                  </div>
                  <h4 class="text-gray-500 text-sm font-bold ml-2 mt-1">A'aishah</h4>
                </span>
              </div>
              <div class="badge bg-red-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z" />
                </svg>
                <span>Popular</span>
              </div>
            </a>

            <a href="#" class="card"><!-- card -->
              <img src="./img/4.jpeg" alt="crochet" class="w-full h-48 sm:h-48 object-cover">
              <div class="m-4 mb-1">
                <h3 class="font-bold mb-0">From Zero to Hero (Crocheting)</h3>
                <span class="flex items-center my-2">
                  <div class="w-6 mt-1">
                    <img src="./img/avatar.jpeg" class="w-full rounded-full" alt="author">
                  </div>
                  <h4 class="text-gray-500 text-sm font-bold ml-2 mt-1">A'aishah</h4>
                </span>
              </div>
              <div class="badge bg-green-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z" />
                </svg>
                <span>Recommended</span>
              </div>
            </a>
          </div>

          <div class="my-20 mx-auto max-w-5xl"><!-- why join section-->

            <h3 class="font-light text-3xl text-center mb-10">Why Join Chiccrochet</h3>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-10 p-3">
              <!-- cards goes here-->
              <div class="flex items-center"> <!-- card -->
                <img class="w-14" src="./img/knitting.png" alt="personalized">
                <div class="ml-5">
                  <h4 class="font-bold mb-2 text-xl">Personalized</h4>
                  <p class="text-sm">Get customized class recommendations based on your interests.</p>
                </div>
              </div>
              
              <div class="flex items-center"> <!-- card -->
                <img class="w-14" src="./img/image-gallery.png" alt="thousand of classes">
                <div class="ml-5">
                  <h4 class="font-bold mb-2 text-xl">Personalized</h4>
                  <p class="text-sm">Build a portfolio of projects that showcase your skills.</p>
                </div>
              </div>
              
              <div class="flex items-center"> <!-- card -->
                <img class="w-14" src="./img/vod.png" alt="thousand of classes">
                <div class="ml-5">
                  <h4 class="font-bold mb-2 text-xl">On-Demand</h4>
                  <p class="text-sm">Watch bite-sized classes on your own schedule, anytime, any where on desktop or mobile app.</p>
                </div>
              </div>
              
              <div class="flex items-center"> <!-- card -->
                <img class="w-14" src="./img/chat.png" alt="thousand of classes">
                <div class="ml-5">
                  <h4 class="font-bold mb-2 text-xl">Online Community</h4>
                  <p class="text-sm">Ask questions, exchange feedback, and learn alongside other students.</p>
                </div>
              </div>
            </div>
          </div>
        </main>
    </div>
  </div>

  <script>
    const burger = document.querySelector('#burger');
    const menu = document.querySelector('#menu');

    burger.addEventListener('click', (e) => {
      if(menu.classList.contains('hidden')) {
        menu.classList.remove('hidden');
      } else {
        menu.classList.add('hidden')
      }
    })
  </script>
</body>
</html>